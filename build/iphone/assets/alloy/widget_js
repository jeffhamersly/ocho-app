function ucfirst(t){return t?t[0].toUpperCase()+t.substr(1):t}var Alloy=require("alloy"),widgets={};module.exports=function(t){var o=this;return widgets[t]?widgets[t]:(this.widgetId=t,this.Collections={},this.Models={},this.Shared={},this.createController=function(o,e){return new(require("alloy/widgets/"+t+"/controllers/"+o))(e)},this.createCollection=function(o,e){return new(require("alloy/widgets/"+t+"/models/"+ucfirst(o)).Collection)(e)},this.createModel=function(o,e){return new(require("alloy/widgets/"+t+"/models/"+ucfirst(o)).Model)(e)},this.createWidget=Alloy.createWidget,this.Collections.instance=function(t){return o.Collections[t]||(o.Collections[t]=o.createCollection(t))},this.Models.instance=function(t){return o.Models[t]||(o.Models[t]=o.createModel(t))},void(widgets[t]=this))};